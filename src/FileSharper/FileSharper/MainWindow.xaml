    <Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSharper"
        xmlns:helpers="clr-namespace:FileSharperUIHelpers;assembly=FileSharperUIHelpers"
        xmlns:FileSharperUI="clr-namespace:FileSharperUI;assembly=FileSharperUI" x:Class="FileSharper.MainWindow"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="FileSharper" Height="700" Width="600">
    <Window.Resources>
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <helpers:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewSearchCommand}" />
                <MenuItem Header="_Open" Command="{Binding OpenSearchCommand}" />
                <MenuItem Header="_Save" Command="{Binding SaveSearchCommand}" />
                <MenuItem Header="Save _As..." Command="{Binding SaveSearchCommand}" CommandParameter="{StaticResource True}"/>
                <MenuItem Header="_Close" Command="{Binding CloseSearchCommand}" />
                <Separator />
                <MenuItem Header="_Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About FileSharper" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TabControl Grid.Row="0" Grid.Column="0" ItemsSource="{Binding SearchDocuments}" SelectedIndex="{Binding SelectedIndex}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"  Visibility="{Binding ShowingHelp, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter={StaticResource True}}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding DisplayName}" Margin="4" ToolTip="{Binding FileName}"/>
                            <Button Height="Auto" Width="Auto" Padding="4" Margin="4" Command="{Binding Path=DataContext.CloseSearchCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">x</Button>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <FileSharperUI:SearchDocumentControl DataContext="{Binding}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
            <StackPanel Margin="20" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{Binding ShowingHelp, Converter={StaticResource boolToVisibilityConverter}}">
                <TextBlock FontSize="24" Margin="20" HorizontalAlignment="Center">About FileSharper</TextBlock>
                <TextBlock Margin="10" HorizontalAlignment="Stretch" TextWrapping="Wrap">
                    FileSharper is Copyright (C) 2018 Andrew Vardeman.  It's open source, distributed under the MIT License.
                    The code is available on GitHub:  https://github.com/adv12/FileSharper.  It's written in C#
                    and WPF, and it's designed to be easily extensible.  If you know C# and would like to add
                    functionality, grab the source and read the project wiki (https://github.com/adv12/FileSharper/wiki)
                    for tips on use and modification.</TextBlock>
                <TextBlock Margin="10" HorizontalAlignment="Stretch" TextWrapping="Wrap">
                    FileSharper uses the Xceed WPF Toolkit, which is distributed under the Microsoft Public License.
                    The code is available on GitHub: https://github.com/xceedsoftware/wpftoolkit</TextBlock>
                <TextBlock Margin="10" HorizontalAlignment="Stretch" TextWrapping="Wrap">
                    FileSharper uses the Json.NET JSON framework, available at https://www.newtonsoft.com/json.
                    It's open source, distributed under the MIT License.  The source code is available on GitHub:
                    https://github.com/JamesNK/Newtonsoft.Json</TextBlock>
                <TextBlock Margin="10" HorizontalAlignment="Stretch" TextWrapping="Wrap">
                    FileSharper uses the CsvHelper library from Josh Close, available at https://joshclose.github.io/CsvHelper.
                    It's open source, distributed under the Microsoft Public License.  The source code is available on GitHub:
                    https://github.com/joshclose/csvhelper
                </TextBlock>
                <TextBlock Margin="10" HorizontalAlignment="Stretch" TextWrapping="Wrap">
                    FileSharper uses Ookii Dialogs from http://www.ookii.org/software/dialogs/</TextBlock>
                <TextBlock Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap">
                    FileSharper uses UDE, a C# port of Mozilla Universal Charset Detector.
                    UDE is distributed under the Mozilla Public License version 1.1.
                    The code is available on GitHub: https://github.com/errepi/ude</TextBlock>
                <Button Padding="4" HorizontalAlignment="Center" Command="{Binding HideAboutCommand}">OK</Button>
            </StackPanel>
        </Grid>
        <!--<FileSharperUI:SearchDocumentControl Name="searchDocumentControl" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"/>-->
    </DockPanel>
</Window>
